<UserControl x:Class="Views.BoatDamage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="1024" Width="768">
    <Grid Width="468" Height="328">
        <Label x:Name="NameLabel" FontSize="16" Content="Naam boot:" HorizontalAlignment="Left" Margin="46,33,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="NameboatCombo" FontSize="16" HorizontalAlignment="Left" Margin="183,38,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="DescribtionLabel" FontSize="16" Content="Beschrijving:" HorizontalAlignment="Left" Margin="46,89,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DescriptionBox" FontSize="16" HorizontalAlignment="Left" Height="84" Margin="183,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <Button x:Name="CancelButton" Content="Annuleren" FontSize="16" HorizontalAlignment="Left" Margin="46,287,0,0" VerticalAlignment="Top" Width="84" Click="CancelButton_Click"/>

        <RadioButton x:Name="HeavyDamageRadioButton" FontSize="16" Content="Zware shade" HorizontalAlignment="Left" Margin="46,219,0,0" VerticalAlignment="Top" Checked="HeavyDamageRadioButton_Checked"/>
        <RadioButton x:Name="LightDamageRadioButton"  FontSize="16" Content="Lichte schade" HorizontalAlignment="Left" Margin="202,219,0,0" VerticalAlignment="Top" Checked="LightDamageRadioButton_Checked"/>
        <Button x:Name="SaveButton" Content="Opslaan" FontSize="16" HorizontalAlignment="Left" Margin="367,282,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
        <Label x:Name="NotificationLabel" Visibility="Hidden" Content="De boot wordt uit de vaart genomen bij zware schade" FontSize="16" HorizontalAlignment="Left" Margin="46,246,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0" Foreground="Red"/>
        <Label x:Name="MessageLabel" Visibility="Hidden" Content="U heeft geen beschrijving ingevuld" HorizontalAlignment="Left" Margin="53,1,0,0" VerticalAlignment="Top" Width="313" FontSize="16" Foreground="#FFF70505"/>

    </Grid>
</UserControl>
