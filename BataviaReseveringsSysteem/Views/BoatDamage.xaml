<UserControl x:Class="Views.BoatDamage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
        >
    <Grid Width="468" Height="328">
        <Label x:Name="NameLabel" FontSize="16" Content="Naam boot:" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="NameboatCombo" FontSize="16" HorizontalAlignment="Left" Margin="183,19,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="DescribtionLabel" FontSize="16" Content="Beschrijving:" HorizontalAlignment="Left" Margin="46,89,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DescribtionBox" FontSize="16" HorizontalAlignment="Left" Height="84" Margin="183,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <Button x:Name="CancelButton" Content="Annuleren" FontSize="16" HorizontalAlignment="Left" Margin="46,287,0,0" VerticalAlignment="Top" Width="84" Click="CancelButton_Click"/>

        <RadioButton x:Name="HeavyDamageRadioButton" FontSize="16" Content="Zware shade" HorizontalAlignment="Left" Margin="46,219,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="LightDamageRadioButton" FontSize="16" Content="Lichte schade" HorizontalAlignment="Left" Margin="202,219,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Opslaan" FontSize="16" HorizontalAlignment="Left" Margin="367,282,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>

    </Grid>
</UserControl>
