<UserControl x:Class="Views.AddBoat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp13"
        mc:Ignorable="d"
        >
    <Grid Background="White" Width="1920" Height="1076">
        <Grid.RowDefinitions>
            <RowDefinition Height="493*"/>
            <RowDefinition Height="587*"/>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Center" Margin="591,0,622,0.333" Width="707">
            <Label x:Name="NameLabel" Content="Bootnaam:" HorizontalAlignment="Left" Margin="130,36,0,0" VerticalAlignment="Top" FontSize="26" Height="45" Width="133"/>
            <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="45" Margin="288,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="26"/>
            <Label x:Name="TypeLabel" Content="Type:" Margin="189,248,1657,92.333" RenderTransformOrigin="0.985,0.426" FontSize="26" />
            <ComboBox x:Name="TypCombo" HorizontalAlignment="Left" Margin="288,242,0,0" Height="45"  VerticalAlignment="Top" Width="245" SelectionChanged="TypCombo_SelectionChanged" FontSize="26">
                <ComboBoxItem Content="Scull" Height="45" Width="300" FontSize="26"/>
                <ComboBoxItem  Content="Skiff" Height="45" Width="300" FontSize="26"/>
                <ComboBoxItem Content="Board" Height="45" Width="300" FontSize="26"/>
            </ComboBox>
            <Label x:Name="RowersLabel" Content="Aantal roeiers:" HorizontalAlignment="Left" Margin="96,100,0,0" VerticalAlignment="Top" FontSize="26" Height="45" Width="173"/>
            <ComboBox x:Name="RowersCombo" HorizontalAlignment="Left" Height="45" FontSize="26" Margin="288,100,0,0" VerticalAlignment="Top" Width="245">
                <ComboBoxItem IsSelected="True" Content="1" Height="45" FontSize="26" Margin="0,0,42.4,0"/>
                <ComboBoxItem Content="2" Height="45" FontSize="26" Margin="0,0,42.4,0"/>
                <ComboBoxItem Content="4" Height="45" FontSize="26" Margin="0,0,42.4,0"/>
                <ComboBoxItem Content="8" Height="45" FontSize="26" Margin="0,0,42.4,0"/>
            </ComboBox>
            <Label x:Name="WeightLabel" Content="Gewicht (kg):" HorizontalAlignment="Left" Margin="104,164,0,0" VerticalAlignment="Top" FontSize="26" RenderTransformOrigin="0.858,0.188" Height="45" Width="159"/>
            <TextBox x:Name="WeightBox" HorizontalAlignment="Left" Height="45" Margin="288,164,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="245" FontSize="26"/>
            <CheckBox x:Name="SteeringWheelCheckbox" Content="Stuur" HorizontalAlignment="Left" Margin="150,304,0,0" VerticalAlignment="Top" FontSize="26" Height="46" Width="113" RenderTransformOrigin="0.703,1.145"/>


            <Label x:Name="NotificationLabel" Visibility="Hidden" Content="" HorizontalAlignment="Left" Margin="137,17.667,0,0" VerticalAlignment="Top" Width="290" Foreground="#FFFF0909" Grid.Row="1" Height="26"/>
        </Canvas>
        <Canvas>
            <Button x:Name="SaveButton" Content="Opslaan" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="245" FontSize="26" Click="SaveButton_Click" RenderTransformOrigin="0.986,0.422" Grid.Row="1" Canvas.Left="1018" Canvas.Top="543"/>
            <Button x:Name="CancelButton" Content="Annuleren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="245" FontSize="26" Height="45" RenderTransformOrigin="0.432,0.234" Click="CancelButton_Click" Grid.Row="1" Canvas.Left="695" Canvas.Top="543"/>
        </Canvas>

    </Grid>
</UserControl>
