<UserControl x:Class="Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer Margin="0,0,0,0">
        <Grid Name="GridDashboard" ScrollViewer.CanContentScroll="True" Height="248">

            <Button x:Name="AddReservationButton" Content="+ Afschrijving toevoegen" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="184" Click="AddReservationButton_Click" FontSize="16"/>
            <Button x:Name="SettingsButton" Visibility="Hidden" Content="Instellingen" HorizontalAlignment="right" Margin="0,81,22,0" VerticalAlignment="Top" Width="111" RenderTransformOrigin="0.524,1.334" FontSize="16"/>
            <Button x:Name="UserListButton" Visibility="Hidden" Content="Inzien gebruikers" HorizontalAlignment="right" Margin="0,142,2,-5" VerticalAlignment="Top" Width="131" RenderTransformOrigin="0.163,0.676" FontSize="16" Click="UserListButton_Click" />
            <Button x:Name="AddBoatButton" Visibility="Hidden" Content="Aanmaken boten"  HorizontalAlignment="right" Margin="0,174,2,-37" VerticalAlignment="Top" Width="131" RenderTransformOrigin="0.163,0.676" FontSize="16" Click="AddBoatButton_Click"/>
            <Button x:Name="SignOutButton" Content="Uitloggen" HorizontalAlignment="right" Margin="0,112,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.163,0.676" FontSize="16" Click="SignOutButton_Click"/>
            <Button x:Name="DamageButton" FontSize="16" Content="Schade Melden" HorizontalAlignment="Right" Margin="490,213,0,0" VerticalAlignment="Top" Width="123" Click="DamageButton_Click"/>
            <Image Source="..\Images\User.png" HorizontalAlignment="Right" Height="70" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.475,0.311"/>
            <Label x:Name="NoReservationLabel"  Content="U heeft nog geen afschrijvingen"  Visibility="Hidden" FontSize="30" HorizontalAlignment="Left" Margin="63,70,0,0" VerticalAlignment="Top" Height="86" Width="518"/>
            <Label x:Name="MaxReservations" Visibility="Hidden" Foreground="#FFFF0909" Content="U heeft het maximaal aantal afschrijvingen bereikt" HorizontalAlignment="Left" Margin="292,10,0,0" VerticalAlignment="Top" Width="323"/>
            <Label x:Name="NameLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Right" FontSize="16" Margin="540,63,0,0" VerticalAlignment="Top" Height="33" Width="65"/>
           
        </Grid>

    </ScrollViewer>
</UserControl>
