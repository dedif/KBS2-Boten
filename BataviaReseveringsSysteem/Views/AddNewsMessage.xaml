<UserControl x:Class="BataviaReseveringsSysteem.Views.AddNewsMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BataviaReseveringsSysteem.Views"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Canvas 
            Width="1024"
            Height="50"
            Background="#673ab7" Margin="0,50,0,1000">
            <Label
            Content="Nieuwsbericht plaatsen"
            Foreground="White"
            FontSize="26"
            Canvas.Left="328" Canvas.Top="5" Width="282"/>
        </Canvas>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Content="Bericht titel"
            VerticalAlignment="Bottom"
            Foreground="#673ab7"
            FontSize="16"
            FontWeight="Bold" Height="26"/>
        <TextBox   
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="5,5,0,0"
            x:Name="TitleBox" 
            Width="120"
            materialDesign:HintAssist.Hint="Voer een titel in"/>
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Height="200"
            x:Name="NewsMessageBox"
            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"

            VerticalAlignment="Center"
            Height="130"
             FontSize="16"

            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            materialDesign:HintAssist.Hint="Bericht"
            IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}"/>

        <Label 
            x:Name="NotificationLabel" 
            Grid.Row="4"
            Grid.Column="1"
            Content="&#xD;&#xA;" 
            Width="290" 
            FontSize="16" 
            Foreground="#DDFF0000"/>
        <Button 
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Content="Plaatsen" 
            Width="120" 
            FontSize="16" 
            x:Name="SaveNewsMessage" 
            Click="SaveNewsMessage_Click"/>
        <Button 
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Content="Annuleren" Width="120" x:Name="Cancel" FontSize="16" Click="CancelNewsMessage_Click"/>
        <Label
            Content="Titel:"
            Grid.Row="1"
            Grid.Column="1"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            FontWeight="Bold"
            Foreground="#673ab7"           
            FontSize="16"/>
        <Label
            Content="Bericht:"
            Grid.Row="2"
            Grid.Column="1"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            FontWeight="Bold"
            Foreground="#673ab7"            
            FontSize="16"/>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Content="Annuleren" FontSize="16" Width="120" x:Name="SaveNewsMessage" Click="CancelNewsMessage_Click" Margin="0,0,100,0"/>
            <Button Content="Opslaan" FontSize="16" Width="120" x:Name="Cancel" Click="SaveNewsMessage_Click"/>
        </StackPanel>
        <Label x:Name="NotificationLabel" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Content="&#xD;&#xA;" FontSize="16" Foreground="#DDFF0000" Height="53"/>
    </Grid>
</UserControl>
