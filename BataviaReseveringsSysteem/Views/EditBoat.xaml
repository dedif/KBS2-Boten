    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameBox" 
                materialDesign:HintAssist.Hint="Bootnaam"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25" />
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="TypCombo" 
                  materialDesign:HintAssist.Hint="Boot type"
                  VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25"  SelectionChanged="TypCombo_SelectionChanged">
            <ComboBoxItem Content="Scull"/>
            <ComboBoxItem  Content="Skiff"/>
            <ComboBoxItem Content="Board"/>
        </ComboBox>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="RowersCombo" 
                  materialDesign:HintAssist.Hint="Aantal roeiers"
                  VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="8"/>
        </ComboBox>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="WeightBox" 
                 materialDesign:HintAssist.Hint="Gewicht (kg)"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25" FontSize="14"/>
        <ToggleButton Grid.Row="4" Grid.Column="1" x:Name="SteeringWheelToggle"
              Style="{StaticResource MaterialDesignSwitchToggleButton}"
              ToolTip="Default ToggleButton Style"/>
        <Label Grid.Row="4" Grid.Column="1" Content="Stuur?" Margin="50,0,150,0" VerticalAlignment="Center"/>

        <Button Grid.Row="5" Grid.Column="1" x:Name="SaveButton" Content="Opslaan" HorizontalAlignment="Right" VerticalAlignment="Top" Width="140" Height="35" FontSize="16" Click="SaveButton_Click"/>
        <Button Grid.Row="5" Grid.Column="1" x:Name="CancelButton" Content="Annuleren" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="140" Height="35" FontSize="16" Click="CancelButton_Click"/>

        <Label x:Name="NotificationLabel" Content="&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,30.667,0,0" VerticalAlignment="Top" Width="290" Grid.Row="1" FontSize="16" Grid.ColumnSpan="2"/>
        <Label Grid.Row="1" Grid.Column="2" x:Name="SkiffLabel" Content="Een skiff boot heeft altijd één roeier en geen stuur" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Left" Width="331"/>
        <Label Grid.Row="2" Grid.Column="2" Content="Benodigd diploma:"/>

        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <CheckBox x:Name="S1CheckBox" Tag="1">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="S1" />
                </DockPanel>
            </CheckBox>
            <CheckBox x:Name="S2CheckBox" Tag="2">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="S2" />
                </DockPanel>
            </CheckBox>
            <CheckBox x:Name="S3CheckBox" Tag="3">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="S3" />
                </DockPanel>
            </CheckBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <CheckBox x:Name="B1CheckBox" Tag="4">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="B1" />
                </DockPanel>
            </CheckBox>
            <CheckBox x:Name="B2CheckBox" Tag="5">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="B2" />
                </DockPanel>
            </CheckBox>
            <CheckBox x:Name="B3CheckBox" Tag="6">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="B3" />
                </DockPanel>
            </CheckBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <CheckBox x:Name="P1CheckBox" Tag="7">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="P1" />
                </DockPanel>
            </CheckBox>
            <CheckBox x:Name="P2CheckBox" Tag="8">
                <DockPanel Height="16">
                    <Image DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Top" Text="P2" />
                </DockPanel>
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
